@model  Perfumeshop.ViewModels.PerfumeOrder

@{
    ViewData["Title"] = "OrderAPerfume";
}

<h1 class="text-center">Order</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-4">
        <form asp-action="OrderAPerfume">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="user.Id"/>
            <div class="form-group my-1">
                <label><b>User</b></label>
                <h5 class="my-2"><b>@ViewBag.User</b></h5>
            </div>
            <div class="form-group my-1">
                <label class="control-label"><b>Perfume</b></br></label>
                <h5 class="my-2"><b>@ViewBag.Perfume - $@ViewBag.Price </b></h5>
            </div>
            <div class="form-group my-1">
                <label class="control-label"><b>Location</b></label>
                <input asp-for="location" class="form-control" />
                <span asp-validation-for="location" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Order Now" class="btn btn-outline-secondary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

