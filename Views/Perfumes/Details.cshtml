@model Perfumeshop.Models.Perfume

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center my-3">@Html.DisplayFor(model => model.Name)</h1>

<div>
    <hr />
    <dl class="row">
         <dt class = "col-sm-2 my-3">
        </dt>
        <dd class = "col-sm-10 my-3">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class = "col-sm-10">
            @if(Model.BrandId!=null){
                <a asp-controller="Brands" asp-action="Details" asp-route-id="@Model.BrandId">  @Html.DisplayFor(model => model.Brand.Name) </a>
            }
            else
            {
                <span></span>
            }
        </dd>
    </dl>
</div>
<div>
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
        <span>|</span>
        <a asp-action="Delete" asp-route-id="@Model?.Id">Delete</a>
    }
    |
    <a asp-action="Index">Back to List</a>
</div>
